<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/Light"
    android:layout_height="match_parent"
    tools:context=".view.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_layout">

        <ImageButton
            android:id="@+id/backHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_text">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/sen"
                android:text="Search"
                android:textAlignment="center"
                android:textSize="@dimen/fontSize" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:src="@drawable/cart" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_cart"
                android:fontFamily="@font/sen"
                android:textAlignment="center"
                android:text="5"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="@dimen/margin_input_login"
        android:drawableLeft="@drawable/search"
        android:drawableRight="@drawable/close"
        android:padding="@dimen/margin_input_login"
        android:background="@drawable/search_bg"
        android:inputType="text"
        android:drawablePadding="@dimen/margin_input_login"
        android:hint="Search dishes, restaurants"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <LinearLayout
            android:id="@+id/layout_categories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sen"
        android:textSize="@dimen/font_size_medium"
        android:text="Suggested food" />

    <GridView
        android:id="@+id/gridviewProduct"
        android:layout_width="match_parent"
        android:numColumns="2"
        android:layout_height="match_parent" />


</LinearLayout>