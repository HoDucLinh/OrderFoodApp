<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_layoutTop"
    tools:context=".view.Verification">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="75dp"
        android:paddingBottom="30dp"
        android:textSize="@dimen/textLogin"
        android:textFontWeight="800"
        android:fontFamily="@font/sen"
        android:text="Verification" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/sen"
        android:textFontWeight="600"
        android:text="We have sent a code to your email" />
    <TextView
        android:id="@+id/emailVerifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:fontFamily="@font/sen"
        android:textFontWeight="800"
        android:text="example@gmail.com" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_login"
        android:padding="@dimen/padding_login"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sen"
                android:background="@android:color/transparent"
                android:text="Code" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sen"
                android:background="@android:color/transparent"
                android:text="Resend in.50sec" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_verification"
                android:layout_weight="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:digits="@string/number"
                android:fontFamily="@font/sen"
                android:background="@drawable/border_verification"
                android:inputType="number" />

            <EditText
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_verification"
                android:layout_weight="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:digits="@string/number"
                android:fontFamily="@font/sen"
                android:background="@drawable/border_verification"
                android:inputType="number" />

            <EditText
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_verification"
                android:layout_weight="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:digits="@string/number"
                android:fontFamily="@font/sen"
                android:background="@drawable/border_verification"
                android:inputType="number" />

            <EditText
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_verification"
                android:layout_weight="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:digits="@string/number"
                android:fontFamily="@font/sen"
                android:background="@drawable/border_verification"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/sendCodeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_input_login"
            android:background="@color/orange"
            android:fontFamily="@font/sen"
            android:text="Send Code" />

    </LinearLayout>
</LinearLayout>