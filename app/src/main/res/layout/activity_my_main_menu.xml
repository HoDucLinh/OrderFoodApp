<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_layoutTop"
    tools:context=".view.MyMainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sen"
            android:text="Profile"
            android:layout_weight="1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/personal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sen_bold"
                android:text="Vishal Khadok"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sen"
                android:text="I love fast food"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_linear_layout"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_margin="@dimen/margin_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/icon_user"
                    android:gravity="start|center"
                    android:text="Personal Info"
                    android:drawableRight="@drawable/ic_navigate_next_24"
                    android:textAllCaps="false"

                    android:fontFamily="@font/sen_bold"
                    android:textSize="16dp"
                    android:textColor="@color/textDark" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_linear_layout"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_margin="@dimen/margin_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:text="My Orders"
                    android:drawableLeft="@drawable/icon_cart"
                    android:textAllCaps="false"
                    android:fontFamily="@font/sen_bold"
                    android:drawableRight="@drawable/ic_navigate_next_24"
                    android:textSize="16dp"
                    android:textColor="@color/textDark" />

                <TextView
                    android:id="@+id/favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:drawableLeft="@drawable/icon_heart"
                    android:text="Favorite"
                    android:textAllCaps="false"

                    android:drawableRight="@drawable/ic_navigate_next_24"
                    android:fontFamily="@font/sen_bold"
                    android:textSize="16dp"
                    android:textColor="@color/textDark" />

                <TextView
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:text="Notification"
                    android:drawableLeft="@drawable/icon_notification"
                    android:textAllCaps="false"

                    android:fontFamily="@font/sen_bold"
                    android:drawableRight="@drawable/ic_navigate_next_24"
                    android:textSize="16dp"
                    android:textColor="@color/textDark" />

                <TextView
                    android:id="@+id/reviewByUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/icon_review"
                    android:fontFamily="@font/sen_bold"
                    android:gravity="start|center"
                    android:text="User Reviews"
                    android:textAllCaps="false"
                    android:drawableRight="@drawable/ic_navigate_next_24"
                    android:textColor="@color/textDark"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_linear_layout"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="@dimen/margin_layout">

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:text="Log Out"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/icon_logout"
                android:fontFamily="@font/sen_bold"
                android:drawableRight="@drawable/ic_navigate_next_24"
                android:textSize="16dp"
                android:textColor="@color/textDark" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>