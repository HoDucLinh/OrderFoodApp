<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCard"
    android:orientation="vertical"

    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/close_24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sen"
            android:text="Profile"
            android:textSize="20dp"
            android:textColor="@color/darkBG"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sen"
        android:text="CARD HOLDER NAME"
        android:textSize="15dp"
        android:textColor="@color/darkBG"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border_edittext"
        android:fontFamily="@font/sen"
        android:textColor="@color/darkBG"
        android:paddingLeft="30dp"
        android:text="Vishal Khadok"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sen"
        android:text="CARD NUMBER"
        android:textSize="15dp"
        android:textColor="@color/darkBG"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border_edittext"
        android:fontFamily="@font/sen"
        android:paddingLeft="30dp"
        android:hint="____ ____ ____"
        android:textColorHint="@color/darkBG"
        android:textSize="25dp"
        android:textColor="@color/darkBG"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/darkBG"
                android:fontFamily="@font/sen"
                android:text="EXPIRE DATE"
                android:textSize="15dp"
                android:gravity="bottom"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_edittext"
                android:fontFamily="@font/sen"
                android:paddingLeft="10dp"
                android:hint="mm/yyyy"
                android:textSize="12dp"
                android:textColorHint="@color/darkBG"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/sen"
                android:text="CVC"
                android:textSize="15dp"
                android:textColor="@color/darkBG"
                android:gravity="bottom"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_edittext"
                android:fontFamily="@font/sen"
                android:paddingLeft="10dp"
                android:hint="..."
                android:textColorHint="@color/darkBG"
                android:textSize="30dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:text="ADD AND MAKE PAYMENT"
        android:background="@drawable/rounded_button"
        />

</LinearLayout>